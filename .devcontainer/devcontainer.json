{
	"name": "Lucidity",
	"workspaceFolder" : "/home/vscode/workspace/",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace/Terraform-Pipelines,type=bind,consistency=delegated",	
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "focal" }
	},

	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},
  	"extensions": ["HashiCorp.terraform"],
	"remoteUser": "vscode"
}